<div class="register-signin-edit-wrapper">
  <div class="sign-up-container">
    <h2 class="user-session-title">ログイン</h2>

    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="field">
        <%= f.label :メールアドレス %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email",class:"user-form" %>
      </div>

      <div class="field">
        <%= f.label :パスワード %><br />
        <%= f.password_field :password, autocomplete: "current-password",class:"user-form" %>
      </div>

      <div class="actions">
        <%= f.submit "ログイン", class:"register-login-btn"%>
      </div>
    <% end %>
    <div class="login-register-link">
    <%= render "devise/shared/links" , class:"register-link" %>
    </div>
  </div>
</div>

