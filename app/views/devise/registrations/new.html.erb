<div class="register-signin-edit-wrapper">
  <div class="sign-up-container">
    <h2 class="new-registration-title">新規登録</h2>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <div class="field">
        <%= f.label :メールアドレス %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email" ,class:"user-form" %>
      </div>

      <div class="field">
        <%= f.label :パスワード（6文字以内） %>
        <% if @minimum_password_length %>
        <% end %><br />
        <%= f.password_field :password, autocomplete: "new-password" ,class:"user-form" %>
      </div>

      <div class="field">
        <%= f.label :パスワード（再入力） %><br />
        <%= f.password_field :password_confirmation, autocomplete: "new-password" ,class:"user-form" %>
      </div>
      <div class="name-container">
        <div class="field">
          <%= f.label :名字 %><br />
          <%= f.text_field :first_name ,class:"name-form"  %>
        </div>

        <div class="field">
          <%= f.label :名前 %><br />
          <%= f.text_field :last_name ,class:"name-form"  %>
        </div>
      </div>

      <div class="field">
        <%= f.label :管理ユーザー確認 %><br />
        <%= f.check_box :admin_true,id: "admin-checkbox", class: "admin-checkbox"  %>
      </div>

      <div id="admin-user-check"  class="field " style="display:none;">
        <%= f.label :管理ユーザー用パスワード %><br />
        <%= f.password_field :admin_password, id:"admin_password", class:"user-form" %>
      </div>

      <div class="actions">
        <%= f.submit "登録" , class:"register-login-btn" %>
      </div>
    <% end %>
    <div class="login-register-link">
    <%= render "devise/shared/links"  %>
    </div>
  </div>
</div>
